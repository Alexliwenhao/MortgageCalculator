.result-page {
  padding: 30rpx;
  background: #f5f5f5;
}

.result-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.result-list {
  margin-bottom: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #333;
}

.divider {
  height: 1rpx;
  background: #eee;
  margin: 20rpx 0;
}

.result-total {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  padding: 16rpx 0;
}

.result-monthly {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  padding: 16rpx 0;
}

.back-btn {
  margin-bottom: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1989fa;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

/* 添加贷款信息卡片样式 */
.loan-info-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.loan-info-header {
  display: flex;
  justify-content: space-between;
  background: #1989fa;
  border-radius: 8rpx;
  padding: 30rpx;
}

.loan-info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.loan-info-item text:first-child {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.loan-info-item text:last-child {
  font-size: 32rpx;
  font-weight: bold;
}

.loan-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 20rpx;
  line-height: 1.5;
}

/* 添加还款计划表样式 */
.repayment-table {
  background: #fff;
  border-radius: 12rpx;
  margin-top: 30rpx;
  padding: 30rpx;
}

.table-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-weight: bold;
  font-size: 28rpx;
}

.table-body {
  max-height: 600rpx;
}

.table-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.col-period {
  flex: 1;
  text-align: center;
}

.col-amount {
  flex: 2;
  text-align: right;
  padding-right: 30rpx;
} 